all:
  propel:
    class:        sfPropelDatabase
    param:
      classname:  PropelPDO
      dsn:     mysql:dbname=<%= node.kimkelen.database.name %>;host=localhost
      username: <%= node.kimkelen.database.user %>
      password: <%= node.kimkelen.database.password %>
      encoding:   utf8
      persistent: true
      pooling:    true
